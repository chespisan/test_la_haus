{
  "name": "client-la-haus",
  "version": "0.2.1",
  "description": "Test La Haus",
  "main": "index.js",
  "homepage": ".",
  "scripts": {
    "start": "npm run watch:scss && webpack serve --open development --config webpack.config.dev.js",
    "build": "npm run build:scss &&  webpack --mode production --config webpack.config.js",
    "watch:scss": "postcss src/styles/tailwind.scss -o src/styles/main.scss",
    "build:scss": "postcss src/styles/tailwind.scss -o src/styles/main.scss",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "author": "Sergio Sanchez",
  "license": "MIT",
  "dependencies": {
    "@types/react-router-dom": "^5.1.7",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-helmet": "^6.1.1",
    "@types/webpack": "^5.28.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.2",
    "autoprefixer": "^10.2.6",
    "babel-jest": "^27.0.5",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "css-loader": "^5.2.6",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "enzyme": "^3.11.0",
    "file-loader": "^6.2.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^27.0.5",
    "mini-css-extract-plugin": "^1.6.1",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "postcss-loader": "^6.1.0",
    "sass-loader": "^12.1.0",
    "tailwindcss": "^2.2.4",
    "terser-webpack-plugin": "^5.1.4",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.4",
    "webpack": "^5.40.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "jest": {
    "verbose": true,
    "setupFilesAfterEnv": [
      "<rootDir>/src/__test__/setupTest.ts"
    ],
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(styl|scss)$": "<rootDir>/src/__mocks__/styleMock.js",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|ico)$": "<rootDir>/src/__mocks__/fileMock.js",
      "^components/(.*)": "<rootDir>/src/components/$1",
      "^containers/(.*)": "<rootDir>/src/containers/$1",
      "^styles/(.*)": "<rootDir>/src/styles/$1",
      "^assets/(.*)": "<rootDir>/src/assets/$1",
      "^services/(.*)": "<rootDir>/src/services/$1",
      "^routes/(.*)": "<rootDir>/src/routes/$1"
    },
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
